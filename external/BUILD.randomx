
package(default_visibility = ["//visibility:public"])

config_setting(
    name = "windows",
    constraint_values = [
        "@bazel_tools//platforms:windows",
    ],
    visibility = ["//visibility:public"],
)


cc_library(
  name = "randomx",
  srcs =  select({
                     "windows": glob(["**/randomx.a"]),
                     "//conditions:default": glob(["**/librandomx.a"]),
                 }),
  hdrs = glob(["**/randomx.h"])
)