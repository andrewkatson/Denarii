
package(default_visibility = ["//visibility:public"])

config_setting(
    name = "windows",
    constraint_values = [
        "@platforms//os:windows",
    ],
    visibility = ["//visibility:public"],
)

config_setting(
    name = "mac",
    constraint_values = [
        "@platforms//os:macos",
    ],
    visibility = ["//visibility:public"],
)

config_setting(
   name = "linux",
   constraint_values = [
      "@platforms//os:linux",
   ],
   visibility = ["//visibility:public"],
)

cc_library(
  name = "openpgm",
  srcs = select({
    "windows": glob(["**/*.a"]),
    "mac": glob(["**/*.a"]),
    "linux": glob(["**/*.a"]),
  }),
  hdrs = glob(["**/include/**/*.h"])
)