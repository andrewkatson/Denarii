
package(default_visibility = ["//visibility:public"])

config_setting(
    name = "windows",
    constraint_values = [
        "@platforms//os:windows",
    ],
    visibility = ["//visibility:public"],
)

config_setting(
    name = "mac",
    constraint_values = [
        "@platforms//os:macos",
    ],
    visibility = ["//visibility:public"],
)

cc_library(
 name = "libssl",
 srcs = glob(["**/libssl.a"]),
 hdrs =
 select({
         ":windows": glob(["**/*.h"]),
         "mac": glob(["**/*.h"]),
         "//conditions:default": glob(["**/ssl/**/*.h"]),
     }),
)

cc_library(
 name = "ssl",
 srcs = glob(["**/libssl.a"]),
 hdrs =  select({
                 ":windows": glob(["**/*.h"]),
                 "mac": glob(["**/*.h"]),
                 "//conditions:default": glob(["**/ssl/**/*.h"]),
             }),
)

cc_library(
 name = "libcrypto",
 srcs = glob(["**/libcrypto.a"]),
 hdrs =
  select({
          ":windows": glob(["**/*.h"]),
          "mac": glob(["**/*.h"]),
          "//conditions:default": glob(["**/crypto/**/*.h"]),
      }),
)