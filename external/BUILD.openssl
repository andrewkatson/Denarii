
package(default_visibility = ["//visibility:public"])

config_setting(
    name = "windows",
    constraint_values = [
        "@bazel_tools//platforms:windows",
    ],
    visibility = ["//visibility:public"],
)

cc_library(
 name = "libssl",
 srcs = glob(["**/libssl.a"]),
 hdrs =
 select({
         ":windows": glob(["**/*.h"]),
         "//conditions:default": glob(["**/ssl/**/*.h"]),
     }),
)

cc_library(
 name = "ssl",
 srcs = glob(["**/libssl.a"]),
 hdrs = glob(["**/ssl/**/*.h"])
)

cc_library(
 name = "libcrypto",
 srcs = glob(["**/libcrypto.a"]),
 hdrs =
  select({
          ":windows": glob(["**/*.h"]),
          "//conditions:default": glob(["**/crypto/**/*.h"]),
      }),
)